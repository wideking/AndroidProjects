<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:textColorPrimary">@color/text_primary</item>

    </style>

    <style name="smallRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/small_rating_bar_full</item>
        <item name="android:minHeight">@dimen/small_rating_bar_size</item>
        <item name="android:maxHeight">@dimen/small_rating_bar_size</item>
    </style>


</resources>
